{
  "name": "mcp-sse-poc",
  "version": "1.0.0",
  "description": "Model Context Protocol SSE Server POC",
  "main": "server.js",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.19.13",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "build": "tsc",
    "generate": "drizzle-kit generate:pg",
    "migrate": "ts-node -e 'import { migrate } from \"drizzle-orm/node-postgres/migrator\"; import { db } from \"./drizzle/db\"; migrate(db, { migrationsFolder: \"./drizzle/migrations\" })'",
    "postinstall": "npm run build && npm run migrate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
